@model IEnumerable<BookStore.Models.Book>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>

    <style>
        /* Base Styles */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f5f5f5;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .header {
            background-color: #6d4c41;
            color: white;
            padding: 20px;
            text-align: center;
            font-size: 32px;
            font-weight: bold;
        }

        .nav-buttons {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-top: 20px;
        }

        .nav-button {
            background-color: #6d4c41;
            color: white;
            padding: 10px 20px;
            text-decoration: none;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
        }

            .nav-button:hover {
                background-color: #5a3a33;
            }

        .book-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            padding: 20px;
            justify-content: center;
        }

        .book-card {
            background-color: white;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            max-width: 250px;
        }

            .book-card img {
                width: 100%;
                height: 250px;
                object-fit: cover;
            }

        .card-body {
            padding: 15px;
        }

        .book-title {
            font-size: 20px;
            color: #6d4c41;
        }

        .btn {
            background-color: #6d4c41;
            color: white;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
        }

            .btn:hover {
                background-color: #5a3a33;
            }
    </style>
</head>
<body>
    <div class="header">
        BookShop
    </div>

    <div class="nav-buttons">
        <a href="/Home" class="nav-button">Home</a>
        <a href="/Cart" class="nav-button">Cart</a>
    </div>

    <div class="book-grid">
        @foreach (var book in Model)
        {
            <div class="book-card">
                <img src="@book.VolumeInfo.ImageLinks?.Thumbnail ?? " https://via.placeholder.com/150""
                     alt="@book.VolumeInfo.Title" />
                <div class="card-body">
                    <h5 class="book-title">@book.VolumeInfo.Title</h5>
                    <p>By: @string.Join(", ", book.VolumeInfo.Authors ?? new string[] { "Unknown" })</p>
                    <p>Price: @((book.SaleInfo?.ListPrice?.Amount ?? 0).ToString("C"))</p>
                    <a class="btn" href="@Url.Action("Details", "Book", new { id = book.Id })">View Details</a>
                </div>
            </div>
        }
    </div>
</body>
</html>

